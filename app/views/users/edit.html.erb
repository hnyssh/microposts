<h1>編集</h1>

<%= form_for(@user, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if @user.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @user.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">name</label>
    <div class="col-sm-10"><%= f.text_field :name, class: 'form-control', id: 'name' %></div>
  </div>

  <div class="form-group">
    <label for="email" class="col-sm-2 control-label">email</label>
    <div class="col-sm-10"><%= f.text_field :email, class: 'form-control', id: 'email' %></div>
  </div>

  <div class="form-group">
    <label for="profile" class="col-sm-2 control-label">profile</label>
    <div class="col-sm-10"><%= f.text_area :profile, class: 'form-control', id: 'profile' %></div>
  </div>

  <div class="form-group">
    <label for="area" class="col-sm-2 control-label">area</label>
    <div class="col-sm-10"><%= f.text_area :area, class: 'form-control', id: 'area' %></div>
  </div>

    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-sm btn-primary btn-block" %>
    </div>

  
<% end %>